.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  background: linear-gradient(135deg, #2D033B 0%, #810CA8 100%);
  color: white;
  
  .spinner {
    width: 64px;
    height: 64px;
    border: 4px solid rgba(229, 184, 244, 0.3);
    border-top-color: #E5B8F4;
    border-radius: 50%;
