      .metric-card {
        background: white;
        border-radius: 16px;
        padding: 2rem 1.5rem;
        text-align: center;
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
        border: 2px solid rgba(193, 71, 233, 0.2);
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;

        &::before {
          content: '';
          position: absolute;
          top: 0;
          left: 0;
          right: 0;
          height: 4px;
          background: linear-gradient(90deg, #C147E9, #E5B8F4, #00d9ff);
        }

        &:hover {
          transform: translateY(-8px);
          box-shadow: 0 12px 32px rgba(193, 71, 233, 0.25);
          border-color: rgba(193, 71, 233, 0.4);
        }

        .metric-icon {
          font-size: 3rem;
          margin-bottom: 1rem;
        }

        .metric-value {
          font-size: 2rem;
          font-weight: 800;
          background: linear-gradient(135deg, #810CA8, #C147E9);
          -webkit-background-clip: text;
          -webkit-text-fill-color: transparent;
          background-clip: text;
          margin-bottom: 0.5rem;
        }

        .metric-label {
          font-size: 0.85rem;
          color: #6b7280;
          font-weight: 600;
          text-transform: uppercase;
          letter-spacing: 0.5px;
        }
      }
    }

    // Combined Analytics
    .combined-analytics {
      background: rgba(255, 255, 255, 0.5);
      border-radius: 20px;
      padding: 2rem;
      margin-bottom: 2rem;
      backdrop-filter: blur(10px);

      .section-heading {
        font-family: 'Orbitron', sans-serif;
        font-size: 1.5rem;
        color: #2D033B;
        margin: 0 0 1.5rem;
        padding-bottom: 1rem;
        border-bottom: 2px solid rgba(193, 71, 233, 0.2);
      }

      .analytics-grid-ai {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1.5rem;

        .analytics-card-ai {
          background: white;
          border-radius: 16px;
          padding: 1.5rem;
          min-height: 250px;
          border: 2px solid rgba(193, 71, 233, 0.2);
          transition: all 0.3s ease;

          &.glass {
            background: rgba(255, 255, 255, 0.7);
            backdrop-filter: blur(10px);
          }

          &:hover {
            border-color: rgba(193, 71, 233, 0.4);
            box-shadow: 0 8px 24px rgba(193, 71, 233, 0.15);
            transform: translateY(-4px);
          }

          h4 {
            font-family: 'Orbitron', sans-serif;
            color: #2D033B;
            font-size: 1rem;
            margin: 0 0 1.25rem;
            font-weight: 700;
            text-transform: uppercase;
          }

          // Quality Meter
          .quality-meter {
            height: 40px;
            background: rgba(193, 71, 233, 0.1);
            border-radius: 20px;
            overflow: hidden;
            margin-bottom: 1.5rem;

            .quality-bar {
              height: 100%;
              background: linear-gradient(90deg, #22c55e, #16a34a);
              border-radius: 20px;
              display: flex;
              align-items: center;
              justify-content: center;
              transition: width 1s cubic-bezier(0.4, 0, 0.2, 1);

              .quality-label {
                color: white;
                font-weight: 700;
                text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
              }
            }
          }

          .quality-details {
            display: flex;
            flex-direction: column;
            gap: 0.75rem;

            .detail-item {
              display: flex;
              justify-content: space-between;
              padding: 0.5rem;
              background: rgba(193, 71, 233, 0.05);
              border-radius: 8px;

              .detail-label {
                color: #6b7280;
                font-weight: 600;
              }

              .detail-value {
                color: #2D033B;
                font-weight: 700;
              }
            }
          }

          // Sentiment Pie (simplified visualization)
          .sentiment-pie {
            display: flex;
            flex-direction: column;
            gap: 1rem;
            margin-bottom: 1rem;

            .pie-segment {
              height: 40px;
              border-radius: 12px;
              display: flex;
              align-items: center;
              justify-content: center;
              color: white;
              font-weight: 700;
              transition: all 0.5s ease;

              &.positive {
                background: linear-gradient(90deg, #22c55e, #16a34a);
              }

              &.negative {
                background: linear-gradient(90deg, #ef4444, #dc2626);
              }

              &.neutral {
                background: linear-gradient(90deg, #6b7280, #4b5563);
              }
            }
          }

          .sentiment-legend-ai {
            display: flex;
            flex-direction: column;
            gap: 0.5rem;

            .legend-item-ai {
              padding: 0.5rem;
              border-radius: 8px;
              font-size: 0.9rem;
              font-weight: 600;

              &.positive {
                background: rgba(34, 197, 94, 0.1);
                color: #16a34a;
              }

              &.negative {
                background: rgba(239, 68, 68, 0.1);
                color: #dc2626;
              }

              &.neutral {
                background: rgba(107, 114, 128, 0.1);
                color: #4b5563;
              }
            }
          }

          // Correlation Chart
          .correlation-chart {
            display: flex;
            flex-direction: column;
            gap: 1.5rem;

            .correlation-bar {
              .bar-section {
                height: 50px;
                border-radius: 12px;
                display: flex;
                align-items: center;
                justify-content: center;
                color: white;
                font-weight: 700;
                transition: width 1s cubic-bezier(0.4, 0, 0.2, 1);

                &.impact {
                  background: linear-gradient(90deg, #C147E9, #E5B8F4);
                }

                &.relevance {
                  background: linear-gradient(90deg, #00d9ff, #0ea5e9);
                }
              }
            }
          }

          // Emotion Heatmap
          .emotion-heatmap {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 1rem;

            .heatmap-cell {
              height: 80px;
              border-radius: 12px;
              display: flex;
              align-items: center;
              justify-content: center;
              color: white;
              font-weight: 700;
              font-size: 0.9rem;
              transition: all 0.3s ease;
              cursor: pointer;

              &:hover {
                transform: scale(1.05);
              }

              &.joy { background: linear-gradient(135deg, #fbbf24, #f59e0b); }
              &.sadness { background: linear-gradient(135deg, #3b82f6, #2563eb); }
              &.anger { background: linear-gradient(135deg, #ef4444, #dc2626); }
              &.fear { background: linear-gradient(135deg, #8b5cf6, #7c3aed); }
              &.surprise { background: linear-gradient(135deg, #ec4899, #db2777); }
              &.disgust { background: linear-gradient(135deg, #10b981, #059669); }
            }
          }
        }
      }
    }

    // Insights Panel
    .insights-panel {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 1.5rem;

      .insight-column {
        background: white;
        border-radius: 16px;
        padding: 2rem;
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
        border: 2px solid rgba(193, 71, 233, 0.2);

        .insight-heading {
          font-family: 'Orbitron', sans-serif;
          font-size: 1.1rem;
          color: #2D033B;
          margin: 0 0 1.5rem;
          padding-bottom: 1rem;
          border-bottom: 2px solid rgba(193, 71, 233, 0.2);
        }

        .insight-list {
          list-style: none;
          padding: 0;
          margin: 0;

          li {
            padding: 0.75rem 0 0.75rem 1.5rem;
            position: relative;
            color: #374151;
            line-height: 1.6;
            font-size: 0.95rem;

            &::before {
              content: '→';
              position: absolute;
              left: 0;
              color: #C147E9;
              font-weight: 700;
            }

            &:not(:last-child) {
              border-bottom: 1px solid #e5e7eb;
            }
          }
        }
      }
    }
  }

  .loading-container {
    min-height: 60vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    
    .loading-spinner {
      width: 80px;
      height: 80px;
      border: 6px solid rgba(229, 184, 244, 0.2);
      border-top-color: #E5B8F4;
      border-radius: 50%;
      animation: spin 1s linear infinite;
      margin-bottom: 2rem;
    }

    .loading-title {
      font-family: 'Orbitron', sans-serif;
      font-size: 2rem;
      color: #2D033B;
      margin: 0 0 0.5rem;
    }

    .loading-subtitle {
      color: #6b7280;
      font-size: 1rem;
      margin: 0;
    }
  }
}

@keyframes pulse {
  0%, 100% { opacity: 0.3; }
  50% { opacity: 0.6; }
}

// Compact emotions for comments
.comment-emotions {
  margin-top: 1rem;
  padding: 1rem;
  background: rgba(193, 71, 233, 0.05);
  border-radius: 8px;
  border-left: 3px solid #C147E9;

  strong {
    display: block;
    margin-bottom: 0.75rem;
    color: #2D033B;
    font-size: 0.9rem;
  }

  .emotion-mini-bars {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
  }

  .emotion-mini {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 0.75rem;
    background: white;
    border-radius: 20px;
    border: 1px solid rgba(193, 71, 233, 0.2);
    font-size: 0.85rem;

    .emotion-mini-name {
      font-weight: 600;
      color: #2D033B;
      text-transform: capitalize;
    }

    .emotion-mini-value {
      font-weight: 700;
      color: #C147E9;
    }
  }
}

// Loading State
.loading-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #2D033B 0%, #810CA8 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 2rem;
  
  .loading-spinner {
    width: 80px;
    height: 80px;
    border: 6px solid rgba(229, 184, 244, 0.2);
    border-top-color: #E5B8F4;
    border-radius: 50%;
    animation: spin 1s linear infinite;
    margin-bottom: 2rem;
  }
  
  .loading-title {
    font-family: 'Orbitron', sans-serif;
    font-size: 2.5rem;
    color: #E5B8F4;
    margin: 0 0 1rem;
    text-shadow: 0 0 20px rgba(193, 71, 233, 0.5);
  }
  
  .loading-subtitle {
    color: #C147E9;
    font-size: 1.2rem;
    margin: 0;
  }
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

@keyframes shimmer {
  0% { transform: translateX(-100%); }
  100% { transform: translateX(100%); }
}

@keyframes sparkle {
  0%, 100% { opacity: 1; transform: scale(1); }
  50% { opacity: 0.7; transform: scale(1.2); }
}

@keyframes bounce-up {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-4px); }
}

@keyframes bounce-down {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(4px); }
}

@media (max-width: 1200px) {
  .stats-grid {
    grid-template-columns: repeat(2, 1fr) !important;
  }
  
  .insights-grid {
    grid-template-columns: 1fr !important;
  }
  
  .sentiment-comparison {
    grid-template-columns: 1fr !important;
  }
}
