      .transcript-stats {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
        padding-top: 1rem;
        border-top: 1px solid rgba(193, 71, 233, 0.2);
        
        .stat-badge {
          background: linear-gradient(135deg, #C147E9 0%, #E5B8F4 100%);
          color: white;
          padding: 0.4rem 1rem;
          border-radius: 20px;
          font-size: 0.85rem;
          font-weight: 600;
