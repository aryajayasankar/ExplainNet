    .sentiment-comparison {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 1.5rem;
      margin: 2rem 0;
      
      .sentiment-model {
        background: linear-gradient(135deg, rgba(45, 3, 59, 0.05) 0%, rgba(129, 12, 168, 0.05) 100%);
        border: 2px solid rgba(193, 71, 233, 0.2);
        padding: 2rem;
        border-radius: 16px;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
        
        &::before {
          content: '';
          position: absolute;
          top: 0;
          left: 0;
          right: 0;
          height: 4px;
          background: linear-gradient(90deg, #C147E9 0%, #E5B8F4 100%);
        }
        
        &:hover {
          border-color: rgba(193, 71, 233, 0.4);
          box-shadow: 0 8px 24px rgba(193, 71, 233, 0.15);
